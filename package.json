{
    "name": "better-oj",
    "displayName": "Better Online Judge",
    "description": "VS Code plugin for Creating/Testing your Online Judge answer set",
    "version": "0.0.1",
    "publisher": "InfiniteX",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.initConfig"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.initConfig",
                "title": "OJ: 新建项目配置"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
