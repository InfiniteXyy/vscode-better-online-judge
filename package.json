{
  "name": "better-oj",
  "displayName": "Better Online Judge",
  "description": "VS Code plugin for Creating/Running your Online Judge answer set",
  "version": "0.0.2",
  "publisher": "YiyangXu",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:betterOJ.initProject",
    "onCommand:betterOJ.generateProject",
    "onCommand:betterOJ.runCurrentCode",
    "onCommand:betterOJ.runCode"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "betterOJ.initProject",
        "title": "初始化 ACM 项目",
        "category": "OJ"
      },
      {
        "command": "betterOJ.generateProject",
        "title": "从模板生成源代码文件",
        "category": "OJ"
      },
      {
        "command": "betterOJ.runCurrentCode",
        "title": "运行当前程序",
        "category": "OJ"
      },
      {
        "command": "betterOJ.runCode",
        "title": "运行程序",
        "category": "OJ"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "betterOJ.runCurrentCode",
          "when": "!(editorLangId != c && editorLangId != cpp)",
          "group": "betterOJ"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.9",
    "@types/elegant-spinner": "^1.0.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2",
    "elegant-spinner": "^1.0.1"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/InfiniteXyy/vscode-better-online-judge"
  }
}
